{% trans_default_domain 'FOSUserBundle' %}


<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="login-panel panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Proszę zaloguj się</h3>
                </div>
                <div class="panel-body">
                    <form role="form" action="{{ path("fos_user_security_check") }}" method="post">
                        <fieldset>
                            <div class="form-group">
                                {% if error %}
                                    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                                {% endif %}
                                {% if csrf_token %}
                                    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                                {% endif %}

                                {#                                    <label for="username"></label>#}
                                <input class="form-control" placeholder="Email" type="text" id="username" name="_username" value="{{ last_username }}" required="required" />
                            </div>
                            <div class="form-group">
                                {#                                <label for="password"></label>#}
                                <input class="form-control" placeholder="Password" type="password" id="password" name="_password" required="required" />
                            </div>
                            <div class="checkbox">
                                <label>
                                    <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                                    <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
                                </label>
                            </div>
                            <input class="btn btn-lg btn-success btn-block" type="submit" id="_submit" name="_submit" value="Zaloguj" />
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
